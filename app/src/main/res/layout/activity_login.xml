<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fi.oulu.unitour.activities.LoginActivity">

    <TextView
        android:id="@+id/tvLoginSocial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="You can sign in with your own accounts"/>

    <LinearLayout
        android:id="@+id/layoutLoginSocial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvLoginSocial"
        android:layout_marginTop="7dp">

        <ImageView
            android:id="@+id/imgLoginFacebook"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <ImageView
            android:id="@+id/imgLoginTwitter"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

        <ImageView
            android:id="@+id/imgLoginGoogle"
            android:layout_width="60dp"
            android:layout_height="60dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvLoginUnitour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/layoutLoginSocial"
        android:layout_marginTop="80dp"
        android:text="or with UniTour application account"/>

    <EditText
        android:id="@+id/etLoginEmail"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvLoginUnitour"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:hint="Email"/>

    <EditText
        android:id="@+id/etLoginPassword"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/etLoginEmail"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:hint="Password"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/etLoginPassword"
        android:layout_marginTop="15dp"
        android:text="Sign in"/>

</RelativeLayout>
